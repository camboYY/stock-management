@model IEnumerable<MvcMovie.Models.Rate>

@{
    ViewData["Title"] = "Rate List";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Value</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.Value</td>
                        <td>
                            <a href="@Url.Action("Edit", "Rate", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "Rate", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-right mt-3">
        <a href="@Url.Action("Create", "Rate")" class="btn btn-success">Create New Rate</a>
    </div>
</div>
