@model MvcMovie.Models.Rate

@{
    ViewData["Title"] = "Delete Rate";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-warning mt-4" role="alert">
        <strong>Warning!</strong> Are you sure you want to delete this rate? This action cannot be undone.
    </div>

    <form asp-action="Delete" method="post">
        <div class="form-group">
            <label asp-for="Id" class="control-label">ID</label>
            <input asp-for="Id" class="form-control" readonly />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Date" class="control-label">Date</label>
            <input asp-for="Date" class="form-control" readonly />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Value" class="control-label">Value</label>
            <input asp-for="Value" class="form-control" readonly />
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger mt-3">Delete</button>
    </form>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Rate")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
