@* @model MvcMovie.Models.Sale

@{
    ViewData["Title"] = "Invoice";
}

<div class="container">
    <h2 class="text-center">Invoice</h2>
    <hr />

    <!-- Sale Details -->
    <div class="mb-4">
        <p><strong>Invoice ID:</strong> @Model.Id</p>
        <p><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Supplier:</strong> @Model.Supplier.Name</p>
    </div>

    <!-- Product Sale Details -->
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Cost</th>
                <th>Discount (%)</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductSaleDetails)
            {
                <tr>
                    <td>@item.Product.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitCost.ToString("F2")</td>
                    <td>@item.Discount.ToString("F2")</td>
                    <td>@((item.Quantity * (item.UnitCost - (item.UnitCost * item.Discount / 100))).ToString("F2"))</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Summary -->
    <div class="text-end">
        <p><strong>Grand Total:</strong> $@Model.ProductSaleDetails.Sum(p => p.Quantity * (p.UnitCost - (p.UnitCost * p.Discount / 100))).ToString("F2")</p>
        <p><strong>Deposit:</strong> $@Model.Deposit.ToString("F2")</p>
        <p><strong>Remaining Balance:</strong> $@(Model.ProductSaleDetails.Sum(p => p.Quantity * (p.UnitCost - (p.UnitCost * p.Discount / 100))) - Model.Deposit).ToString("F2")</p>
    </div>

    <!-- Print Invoice Button -->
    <div class="text-center mt-4">
        <button class="btn btn-success" onclick="printInvoice()">Print Invoice</button>
        <a asp-action="Index" class="btn btn-primary">Back to Sale List</a>
    </div>
</div>

@section Scripts {
    <script>
        function printInvoice() {
            window.print();
        }
    </script>
} *@
