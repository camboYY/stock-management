@model MvcMovie.Utility.PaymentPurchase

@{
    ViewData["Title"] = "Purchase Payment";
}

<h1>Payment to customer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Paying">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group mb-2">
                <label asp-for="PayDate" class="control-label">Pay Date</label>
                <input asp-for="PayDate" class="form-control" />
                <span asp-validation-for="PayDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-5">
                <label asp-for="PayAmount" class="control-label"></label>
                <input asp-for="PayAmount" class="form-control" />
                <span asp-validation-for="PayAmount" class="text-danger"></span>
            </div>
            <select asp-for="PaymentMethodId" asp-items="@ViewData["PaymentOption"] as IEnumerable<SelectListItem>"
                class="form-control mb-5">
                <option disabled selected>--select Payment Option--</option>
            </select>
            <select asp-for="PurchaseId" asp-items="@ViewData["PurchaseList"] as IEnumerable<SelectListItem>"
                class="form-control mb-5">
                <option disabled selected>--select Purchase--</option>
            </select>
            <div class="form-group">
                <input type="submit" value="Paying" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Payment">Back to Payment Report</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
